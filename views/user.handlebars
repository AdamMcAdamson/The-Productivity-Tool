<script type="text/javascript" src="/assets/js/userdisplay.js">
</script>
<header class="header"><h1 class="un">{{uservar.display_name}}</h1>
<form style="float: right;"></form>
<label><b>New Topic</b></label>
<input id="newtopicName" type="text" placeholder="Enter Topic" name="newTopic" required>
<button type="submit" id="newTopic">Submit</button>
</header>

<div class="col-md-2"></div>
<div class="container col-md-8" >
	{{#each (each_sort uservar "topics" "position") as |topic topicindex|}}
		<div class="topic_div">
		<h3>{{topic.topic_name}}</h3>
			{{#each (each_sort topic "tasks" "priority") as |task taskindex|}}
				<div class="Atasks">
					<button class="btn" id="btn-task_{{task.id}}" data-toggle="modal" data-target="#myModal"><h4>{{task.task_title}}</h4></button>
				</div>
			{{/each}}
		</div>
	{{/each}}
</div>
 <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="col-md-2"></div>